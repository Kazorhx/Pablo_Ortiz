@model Pablo_Ortiz.Modelos.Ubicacion

@{
    ViewData["Title"] = "Eliminar Ubicación";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mt-4">
    <!-- Título centrado -->
    <h1 class="text-center mb-4">Eliminar Ubicación</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <!-- Cuadro del contenido -->
            <div class="p-4 border" style="border-color: #40E0D0; border-width: 2px; border-radius: 10px;">
                <h4 class="text-center">Ubicación</h4>
                <hr />
                <h3 class="text-center">¿Estás seguro que deseas eliminar este registro?</h3>
                <dl class="row">
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Nombre)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Nombre)
                    </dd>
                </dl>
                <form asp-action="Delete" class="text-center mt-3">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Eliminar" class="btn btn-danger btn-lg me-2" />
                    <a asp-action="Index" class="btn btn-secondary btn-lg">Volver a la Lista</a>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
