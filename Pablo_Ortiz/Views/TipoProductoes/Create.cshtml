@model Pablo_Ortiz.Modelos.TipoProducto

@{
    ViewData["Title"] = "Crear Tipo de Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mt-4">
    <!-- Título centrado -->
    <h1 class="text-center mb-4">Crear Tipo de Producto</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <!-- Cuadro del formulario -->
            <div class="p-4 border" style="border-color: #40E0D0; border-width: 2px; border-radius: 10px;">
                <h4 class="text-center">Tipo de Producto</h4>
                <hr />
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group mb-3">
                        <label asp-for="Nombre" class="form-label"></label>
                        <input asp-for="Nombre" class="form-control border-success" style="border-width: 2px;" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Descripcion" class="form-label"></label>
                        <input asp-for="Descripcion" class="form-control border-success" style="border-width: 2px;" />
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Estado" class="form-label"></label>
                        <input asp-for="Estado" class="form-control border-success" style="border-width: 2px;" />
                        <span asp-validation-for="Estado" class="text-danger"></span>
                    </div>
                    <div class="form-group text-center mt-4">
                        <input type="submit" value="Crear" class="btn btn-outline-primary btn-lg me-2" style="background-color: #ffffff; border-color: #40E0D0; color: #40E0D0; font-weight: bold;" />
                        <a asp-action="Index" class="btn btn-secondary btn-lg">Volver a la Lista</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
