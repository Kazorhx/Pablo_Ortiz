@model Pablo_Ortiz.Modelos.TipoProducto

@{
    ViewData["Title"] = "Eliminar Tipo de Producto";
}

<div class="mt-4">
    <!-- Título centrado -->
    <h1 class="text-center mb-4">Eliminar Tipo de Producto</h1>

    <h3 class="text-center mb-3">¿Estás seguro que deseas eliminar este registro?</h3>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <!-- Cuadro del contenido -->
            <div class="p-4 border" style="border-color: #40E0D0; border-width: 2px; border-radius: 10px;">
                <h4 class="text-center">Tipo de Producto</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Nombre)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Nombre)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Descripcion)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Descripcion)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Estado)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Estado)
                    </dd>
                </dl>
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <div class="text-center mt-3">
                        <input type="submit" value="Eliminar" class="btn btn-danger btn-lg me-2" />
                        <a asp-action="Index" class="btn btn-secondary btn-lg">Volver a la Lista</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
