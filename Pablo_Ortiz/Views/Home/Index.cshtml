@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #20B2AA; 
            color: #fff; 
        }

        .sidebar {
            background-color: #2E8B57; 
            border-radius: 5px;
            padding: 15px;
        }

            .sidebar .btn {
                background-color: #3CB371;
                color: #fff;
                width: 100%;
                text-align: left;
            }

                .sidebar .btn:hover {
                    background-color: #2E8B57;
                }
    </style>
</head>
<body>
    <div class="container-fluid mt-4">
        <div class="row">
         
            <div class="col-md-3 sidebar">
                <h5>Menú</h5>
            
                <button class="btn btn-primary mb-3" type="button" data-bs-toggle="collapse" data-bs-target="#menuList" aria-expanded="false" aria-controls="menuList">
                    Opciones de Navegación
                </button>
            
                <div class="collapse" id="menuList">
                    <a href="/" class="btn mb-2">Inicio</a>
                    <a href="/Proveedors" class="btn mb-2">Proveedores</a>
                    <a href="/Ubicacions" class="btn mb-2">Ubicaciones</a>
                    <a href="/TipoProductoes" class="btn mb-2">Tipos de Producto</a>
                    <a href="/Proveedors/ReporteProveedoresPorCiudad" class="btn mb-2">Reporte Proveedores</a>
                </div>
            </div>

         
            <div class="col-md-9 d-flex align-items-center justify-content-center">
                <h1 class="display-4 text-center">Bienvenido<br>¿Qué deseas hacer?</h1>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
