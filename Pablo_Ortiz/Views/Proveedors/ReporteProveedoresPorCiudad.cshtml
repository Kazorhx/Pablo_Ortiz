@{
    ViewData["Title"] = "Reporte de Proveedores por Ciudad";
    Layout = "~/Views/Shared/_Layout.cshtml"; /* Asegúrate de que el layout esté configurado */
}

<!-- Espacio entre la navbar y el contenido -->
<div class="mt-4">
    <!-- Título centrado -->
    <h1 class="text-center mb-4">Reporte de Proveedores por Ciudad</h1>

    <!-- Contenedor de la tabla con ancho limitado -->
    <div class="container" style="max-width: 50%;">
        <table class="table table-bordered">
            <thead style="background-color: #40E0D0; color: #ffffff;">
                <tr>
                    <th>Ciudad</th>
                    <th>Total de Proveedores</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.Ciudad
                        </td>
                        <td>
                            @item.TotalProveedores
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>